<div id="app" class="container">
    <a asp-controller="Campus" asp-action="New" class="btn btn-primary">New</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr v-for="item in list">
            <td>{{item.id}}</td>
            <td>{{item.name}}</td>
            <td>{{item.address}}</td>
            <td>
                
            </td>
        </tr>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
    $(() => {
        const app = Vue.createApp({
            setup(){
                const list = Vue.ref([]);
                const getData = async () => {
                    const res = await fetch("/Campus/GetList");
                    list.value = await res.json();
                }
                
                Vue.onMounted(async () => {
                    await getData();
                })
                
                return {
                    list
                }
            }
        });
        app.mount("#app");
    });
    </script>
}
